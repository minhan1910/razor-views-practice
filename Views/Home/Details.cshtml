@model CityWeather

@*Fahrenheit is less than 44 = blue background color
  Fahrenheit is between 44 and 74 = blue background color
  Fahrenheit is greater than 74 = blue background color*@

@{
    string GetBackground(int fah)
    {
        string res = string.Empty;

        return fah < 44 ? "blue-back" :
               fah <= 74 ? "green-back" : "orange-back";
    }
}

<!DOCTYPE html>
<html>
<head>
    <title>All Products</title>
    <meta charset="utf-8" />
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="container ">
        <div class="page-content margin-auto">
            <div class="margin-bottom">
                <h1>Weather</h1>
            </div>
            <div class="margin-top-200 margin-left flex" style="justify-content: center;">
                <div class="box">
                    <div class="flex-borderless">
                        <div class="w-50">
                            <h1>@Model.CityName</h1>
                            <p class="text-dark-grey">@Model.DateAndTime.ToString("dd MMM yyyy")</p>
                            <p class="text-dark-grey">@Model.DateAndTime.ToString("hh:mm tt")</p>
                        </div>
                        <div class="border-left w-50">
                            <h1 class="margin-left">@Model.TemperatureFahrenheit <sup class="text-grey">&#8457</sup></h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <a href="/">Back to Weather Home Page</a>
            </div>
        </div>
    </div>
</body>
</html>